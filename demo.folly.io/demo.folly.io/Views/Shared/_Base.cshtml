<!DOCTYPE html>
<html>
<head>
    <script type="text/javascript">
        var currentDemoID = @ViewBag.SiteID;
        var savedDemoID = localStorage.getItem("follyDemoID");

        if(savedDemoID == null && currentDemoID == 0)
        {
            window.location = "/" + Math.floor(Math.random() * 1000000) + window.location.pathname;
        }
        else if(currentDemoID == 0)
        {
            window.location = "/" + savedDemoID + window.location.pathname;
        }
        else
        {
            localStorage.setItem("follyDemoID", currentDemoID);
        }
    </script>
    <script src="https://plugins.folly.io/release/alpha/folly.js" folly-sitekey="66336fce2798f7b818309d76e0524b47" folly-paths="/@ViewBag.SiteID"></script>
