</head>
<body>
    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)

    <script>
        $(function(){
            $(window).click(function(e){
                var elem = $(e.toElement);

                if(!elem.is("#follySettings"))
                {
                    var p = elem.parents("#follySettings");

                    if (p.length > 0)
                        elem = $(p[0]);
                    else
                        return;
                }

                $("#follyEmail").val("demo@folly.io");
                $("#follyPassword").val("follydemo");
            })
        });
    </script>
